<div class="container">
  <h2 class="title-lg mb">Вопрос <%= @question.id %></h2>

  <p class="mb-sm"><%= @question.body %></p>
  <p>user_id: <b><%= @question.user_id %></b></p>

  <div class="mt">
    <%= link_to fa_icon('pencil'), edit_question_path(@question), title: 'Изменить вопрос' %>
    <%= button_to fa_icon('trash-o'), question_path(@question), method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, title: 'Удалить вопрос' %>

    <% unless @question.hidden? %>
    <% hide_button_setting = { fa_icon: 'eye-slash', title: 'Скрыть' } %>
      <% else %>
    <% hide_button_setting = { fa_icon: 'eye', title: 'Показать' } %>
    <% end %>

    <%= button_to fa_icon(hide_button_setting[:fa_icon]), hide_question_path(@question), method: :put, title: hide_button_setting[:title] %>
  </div>

  <p class="mt"><%= link_to "Все вопросы", questions_path %></p>
</div>
